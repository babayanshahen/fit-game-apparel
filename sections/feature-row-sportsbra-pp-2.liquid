<div style="margin:30px">
  <h2 class="h3 section-header__title text-center">
    {{ section.settings.title }}
  </h2>
</div>

<div style="margin-bottom:10px;" class="wrapper">
  <div class="page-width feature-row">
    
    <div class="feature-row__item">
      {% if section.settings.first_image != blank %}
      <noscript>
        {{ section.settings.first_image | img_url: '600x600' | img_tag: section.settings.first_image.alt, 'feature-row__image-no-js' }}
      </noscript>
      <div class="feature-row__image-wrapper" style="padding-top:{{ 1 | divided_by: section.settings.first_image.aspect_ratio | times: 100}}%;">
        {% assign img_url = section.settings.first_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
        <img class="feature-row__image lazyload"
             src="{{ section.settings.first_image | img_url: '300x300' }}"
             data-src="{{ img_url }}"
             data-widths="[360, 540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
             data-aspectratio="{{ section.settings.first_image.aspect_ratio }}"
             data-sizes="auto"
             alt="{{ section.settings.first_image.alt | escape }}">
      </div>
      {% else %}
      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>
    
    <div class="feature-row__item">
      {% if section.settings.second_image != blank %}
      <noscript>
        {{ section.settings.second_image | img_url: '600x600' | img_tag: section.settings.second_image.alt, 'feature-row__image-no-js' }}
      </noscript>
      <div class="feature-row__image-wrapper" style="padding-top:{{ 1 | divided_by: section.settings.second_image.aspect_ratio | times: 100}}%;">
        {% assign img_url = section.settings.second_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
        <img class="feature-row__image lazyload"
             src="{{ section.settings.second_image | img_url: '300x300' }}"
             data-src="{{ img_url }}"
             data-widths="[360, 540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
             data-aspectratio="{{ section.settings.second_image.aspect_ratio }}"
             data-sizes="auto"
             alt="{{ section.settings.second_image.alt | escape }}">
      </div>
      {% else %}
      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>
  </div>
</div>


