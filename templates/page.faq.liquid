<!-- /templates/page.liquid -->
<div class="grid--full grid--table">
  <header class="section-header text-center">
    <h1>{{ page.title }}</h1>
    <hr class="hr--small">
  </header>
  
  <div class="grid">
    <div class="grid__item large--four-twelfths medium--four-twelfths">
      {% section 'support-navigation' %}
    </div>
    
    <div class="grid__item medium--eight-twelfths large--eight-twelfths">
      {% if page.url contains "shipping" %}
		{% section 'accordion-faqs-shipping' %}
	  {% elsif page.url contains "returns" %}
      	{% section 'accordion-faqs-returns' %}
      {% else %}
        {% section 'accordion' %}
      {% endif %}
    </div>
  </div>
</div>


